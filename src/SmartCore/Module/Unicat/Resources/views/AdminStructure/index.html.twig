{% extends '@UnicatModule/Admin/_layout.html.twig' %}

{% block title %}{{ 'Structures'|trans }} / {{ parent() }}{% endblock %}

{% block content %}

<div class="box box-primary">
    <div class="box-header with-border">

    <a href="{{ path('unicat_admin.structure_create', {'configuration': configuration.name}) }}" class="btn btn-success pull-right">
        <i class="icon-plus icon-white"></i><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> {{ 'Create structure'|trans }}
    </a>

    <h3>{{ 'Structures'|trans }}</h3>

    <table class="table table-bordered table-hover">
        <thead><tr>
            <th style="width: 1%;">id</th>
            <th>{{ 'Title'|trans }}</th>
            <th>{{ 'Name'|trans }}</th>
            <th>{{ 'Entries mode'|trans }}</th>
            <th>{{ 'Is required'|trans }}</th>
            <th>{{ 'Is tree'|trans }}</th>
            <th>{{ 'Created at'|trans }}</th>
        </tr></thead>
        <tbody>
        {% for item in configuration.structures %}
            <tr>
                <td>{{ item.id }}</td>
                <td>
                    <a href="{{ path('unicat_admin.structure', {'id': item.id, 'configuration': item.configuration.name}) }}">{{ item.title }}</a>
                    <a href="{{ path('unicat_admin.structure_edit', {'id': item.id, 'configuration': item.configuration.name}) }}" style="float: right;" title="Редактирование структуры">
                        <i class="icon-edit" title="Edit"></i><span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    </a>
                </td>
                <td>{{ item.name }}</td>
                <td>{{ item.entries }}</td>
                <td>{{ item.isRequired }}</td>
                <td>{{ item.isTree }}</td>
                <td>{{ item.createdAt|date() }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
</div>

{% endblock content %}
