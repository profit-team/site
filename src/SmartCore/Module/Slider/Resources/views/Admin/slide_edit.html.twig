{% extends '@SliderModule/Admin/index.html.twig' %}

{% block title %}{{ 'Slide'|trans }} / {{ parent() }}{% endblock %}

{% block content %}

    <ul class="nav nav-pills" id="myTab">
        <li><a href="{{ path('smart_module.slider.admin') }}">Список всех слайдеров</a></li>
        <li><a href="{{ path('smart_module.slider.admin_slider', {'id': slide.slider.id }) }}">Редактирование слайдера <b>&laquo;{{ slide.slider.title }}&raquo;</b></a></li>
        <li class="active"><a>Свойства слайда</a></li>
    </ul>

<div class="box box-primary">
    <div class="box-header with-border">

    <table style="width: 100%;">
        <tr>
            <td style="vertical-align: top;">
                {{ form(form, {'attr': {'class': 'form-horizontal'}} ) }}
            </td>
            <td>
                <img src="{{ asset(webPath) }}{{ slide.filename }}" alt="" width="500" style="margin-left: 40px;" />
            </td>
        </tr>
    </table>

    </div>
</div>

{% endblock content %}
