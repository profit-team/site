{% block body_js %}
    {{ parent() }}
    <script>
        $('#myTab a').click(function (e) {
            e.preventDefault();
            $(this).tab('show');
            $(this.hash + ' input.focused').focus();
            tinyMCE.get($(this.hash + ' textarea').attr('id')).getBody().focus();
        });
    </script>
{% endblock body_js %}
