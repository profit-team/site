{% extends 'BlogModule:Admin:layout.html.twig' %}

{% block title %} {{ 'Tags'|trans }} / {{ parent() }} {% endblock %}

{% block content %}

<div class="box box-primary">
    <div class="box-header with-border">

        <div class="row">
    <div class="span3 col-md-3">
        {{ form(form, {'attr': {'class': 'well'} }) }}
    </div>

    <div class="span8 col-md-8">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'Title'|trans }}</th>
                <th>{{ 'Slug'|trans }}</th>
                <th>{{ 'Weight'|trans }}</th>
                <th>{{ 'Created at'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for tag in pagerfanta.currentPageResults %}
                <tr>
                    <td>{{ tag.id }}</td>
                    <td>
                        <a href="{{ path('smart_blog_admin_tag_edit', {'id': tag.id}) }}" title="{{ 'Edit'|trans }}">
                            {{ tag.title }}
                        </a>
                    </td>
                    <td>{{ tag.slug }}</td>
                    <td>{{ tag.weight }}</td>
                    <td>{{ tag.createdAt | localizeddate() }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <p>{{ 'Total tags'|trans }}: {{ pagerfanta.count }}</p>

        {% if pagerfanta.haveToPaginate %}
            {{ pagerfanta(pagerfanta, 'twitter_bootstrap3_translated', {
                    'css_container_class': 'pagination pagination-centered',
                })
            }}
        {% endif %}
    </div>

        </div>
    </div>
</div>


{% endblock content %}
